<%- contentFor('body') %>
    <%- include('includes/nav') %>
        <header>
            <h1 class="page-title text-center">
                <%= _locals.title %>
            </h1>
            <h3 class="page-message text-center">
                <%= subTitle %>
            </h3>
            <h4 class="page-message text-center">
                <i>
                    <%= instructions %>
                </i>
            </h4>
        </header>
        <div class="row">
            <div class="col-sm-6">
                <!-- #region hard -->
                <button class="btn btn-primary" id="start-hard" value="hardSection">
                    Load First Audio Clip
                </button>
                <figure class="hardSection">
                    <figcaption>Hardest One</figcaption>
                    <audio id="hardSection" controls src='<%= hardClip %>' value="hard">
                        Your browser does not support the
                        <code>audio</code> element.
                    </audio>
                </figure>
                <!-- #endregion -->

                <br>
                <!-- #region medium-->
                <button class="btn btn-primary mt-5" class="" id="start-medium" value="mediumSection">
                    Load Another (lower points)
                </button>
                <figure class="mediumSection">
                    <figcaption>Medium</figcaption>
                    <audio id="mediumSection" controls src='<%= mediumClip %>' value="medium">
                        Your browser does not support the
                        <code>audio</code> element.
                    </audio>
                </figure>
                <!-- #endregion -->
                <br>
                <!-- #region easy -->
                <button class="btn btn-primary mt-5" class="" id="start-easy" value="easySection">
                    Load the Last Clip (least points)
                </button>
                <figure class="easySection">
                    <figcaption>Easiest Clip</figcaption>
                    <audio id="easySection" controls src='<%= easyClip %>' value="easy">
                        Your browser does not support the
                        <code>audio</code> element.
                    </audio>
                </figure>
                <!-- #endregion -->

                <br>
            </div>
            <div class="col-sm-6">
                <%- include('includes/guessForm') %>
            </div>

        </div>
        <div class="row justify-content-center">
            <button class="btn btn-danger" id="reveal-button" value="<%= answer %>">
                Reveal Answer (no points)
            </button>
            <div id="answer-div">
                <%- include('includes/answer') %>
            </div>
        </div>


        <style>
            .page-message {
                color: blue
            }

            figure {
                margin: 0;
            }
        </style>


        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns"
            crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script src="./JS/loadMedia.js"></script>
        <script src="./JS/guessForm.js"></script>
        <script src="./JS/score.js"></script>