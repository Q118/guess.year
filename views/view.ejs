<%- contentFor('header') %>
<h1 class="page-title text-center"><%= _locals.title %></h1>
<h3 class="page-message text-center"><%= subTitle %></h3>
<h4 class="page-message text-center"><%= instructions %></h4>
<%- contentFor('footer') %>
<h8>This is the footer</h8>


<%- contentFor('body') %>

<!-- This is part of the body. Will hard Code in but-->
<!-- todo: eventually willl dynamically load content from app.js. based on year -->
<div class="row">
    <div class="col-md-7">
        <button id="start-hard" value="hardSection">
            Load First Audio Clip
        </button>
        <figure class="hardSection">
            <figcaption>Hardest One</figcaption>
            <audio id="hardSection" controls src="./media/billy_Madison/hard.wav" value="hard">
                Your browser does not support the
                <code>audio</code> element.
            </audio>
        </figure>
        <br>

        <button class="mt-5" id="start-medium" value="mediumSection">
            Load Another (lower point)
        </button>
        <figure class="mediumSection">
            <figcaption>Medium</figcaption>
            <audio id="mediumSection" controls  src="./media/billy_Madison/medium.wav" value="medium">
                Your browser does not support the
                <code>audio</code> element.
            </audio>
        </figure>
        <br>

        <button class="mt-5" id="start-easy" value="easySection">
            Load the Last Clip (least points)
        </button>
        <figure class="easySection">
            <figcaption>Easiest Clip</figcaption>
            <audio id="easySection" controls src="./media/billy_Madison/easy.wav" value="easy">
                Your browser does not support the
                <code>audio</code> element.
            </audio>
        </figure>
        <br>
    </div>
    <div class="col-md-5">
        <h4>Enter Your Guess</h4>
        <form id="guess-form">
            <div class="form-group">
                <label for="guess">Guess</label>
                <input type="text" class="form-control" id="guess" placeholder="Enter Guess">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
<br><br><br>
            <button>
                Reveal The Movie Release Year
            </button>


    </div>
</div>


<style>
  .page-message { color: blue }
  figure {margin: 0;}
</style>


